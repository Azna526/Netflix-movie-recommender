import pandas as pd
import numpy as np
import pickle
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.metrics.pairwise import cosine_similarity

# Load dataset
movies = pd.read_csv("movies_metadata.csv", low_memory=False)

# Keep only useful columns
movies = movies[['id', 'title', 'overview']].dropna().reset_index(drop=True)

# Create TF-IDF matrix on movie overviews
tfidf = TfidfVectorizer(stop_words="english")
tfidf_matrix = tfidf.fit_transform(movies['overview'])

# Compute cosine similarity
similarity = cosine_similarity(tfidf_matrix, tfidf_matrix)

# Save movies dataframe
movies.to_csv("processed_movies.csv", index=False)

# Save similarity matrix
with open("similarity.pkl", "wb") as f:
    pickle.dump(similarity, f)

print("âœ… similarity.pkl and processed_movies.csv created successfully!")
